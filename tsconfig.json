{
  "exclude": [
    "**/*.spec.ts",
    "node_modules",
    "src/sandbox.ts"
  ],
  "compilerOptions": {
    "module": "amd",
    "outFile": "build/all.js",
    "rootDir": "src",
    "target": "es5",
    "allowJs": false,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": false,
    "lib": [
      "es2017",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  }
}