{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "amd",
    "outFile": "build/all.js",
    "allowJs": false,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": false,
    "lib": [
      "es2017",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  }
}